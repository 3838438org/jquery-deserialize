# https://raw.githubusercontent.com/jquery/jquery/master/.editorconfig
# editorconfig.org

root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2

# Allow trailing whitespace in Markdown files (it's part of the syntax)
[*.md]
trim_trailing_whitespace = false
